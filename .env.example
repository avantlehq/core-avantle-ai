# Database
DATABASE_URL="postgresql://username:password@localhost:5432/core_avantle_ai?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-here-min-32-chars"
JWT_EXPIRES_IN="24h"

# Server Configuration
NODE_ENV="development"
PORT=3001
HOST="0.0.0.0"

# API Configuration
API_VERSION="v1"
CORS_ORIGIN="http://localhost:3000,https://dpia.avantle.ai"
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW="1 minute"

# Admin Configuration
PLATFORM_ADMIN_EMAIL="admin@avantle.ai"
PLATFORM_ADMIN_PASSWORD="change-this-password"

# Webhook Configuration (optional)
WEBHOOK_SECRET="webhook-secret-key-here"

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="info"